{
    "name": "hbsolutions/php-auth",
    "description": "A variety of authentication methods and tools for them for a PHP-project or microservice.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "HBS Development Team",
            "email": "dev.hbsolutions@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "autoload": {
        "psr-4": {
            "HBS\\Auth\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": { "Tests\\": "tests/" }
    },
    "require": {
        "php": "^7.4||^8",
        "ext-json": "*",
        "psr/http-factory": "^1.0.x-dev",
        "psr/http-message": "^1.0.x-dev",
        "psr/http-server-handler": "1.0.x-dev",
        "psr/http-server-middleware": "1.0.x-dev",
        "psr/log": "^2.0 || ^3.0",
        "firebase/php-jwt": "dev-main",
        "hbsolutions/php-helpers": "dev-main",
        "hbsolutions/php-immutable": "dev-main"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "guzzlehttp/psr7": "2.4.x-dev"
    }
}
